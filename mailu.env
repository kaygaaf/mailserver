# Mailu Configuration
# Domain and Hostname
DOMAIN=kayorama.nl
HOSTNAME=mail.kayorama.nl
POSTMASTER=admin

# TLS/SSL
TLS_FLAVOR=letsencrypt

# Database
DB_FLAVOR=sqlite

# Authentication
AUTH_RATELIMIT=10/minute;1000/hour
DISABLE_STATISTICS=false

# Web settings
WEB_ADMIN=true
WEB_WEBMAIL=true
WEBMAIL=/webmail
SITENAME=Kayorama Mail

# Network settings
SUBNET=192.168.203.0/24
SUBNET6=

# Mail settings
MESSAGE_SIZE_LIMIT=50000000
MESSAGE_RATELIMIT=200/day
RELAYNETS=
RELAYHOST=

# Fetchmail
FETCHMAIL_ENABLED=true

# Recipient delimiter (for sub-addressing)
RECIPIENT_DELIMITER=+

# DMARC/DKIM
DMARC_RUA=admin@kayorama.nl
DMARC_RUF=admin@kayorama.nl

# Welcome email
WELCOME=true
WELCOME_SUBJECT=Welcome to your new email account
WELCOME_BODY=Welcome to your new email account. If you have any questions, please contact the administrator.

# Logo
LOGO_URL=

# Webmail (Roundcube)
ROUNDCUBE_PLUGINS=archive,zipdownload,managesieve,markasjunk

# Full-text search
FULL_TEXT_SEARCH=true

# Admin account
INITIAL_ADMIN_ACCOUNT=admin
INITIAL_ADMIN_DOMAIN=kayorama.nl
INITIAL_ADMIN_PW=change-this-password-123

# Secret key (generate with: openssl rand -hex 32)
SECRET_KEY=change-this-secret-key-32-chars-long

# Additional domains (comma-separated)
# DOMAINS=domain1.com,domain2.com,domain3.com
