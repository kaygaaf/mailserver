# Mailu Environment Configuration
# Documentation: https://mailu.io/master/configuration.html

# Main domain and hostname
DOMAIN=kayorama.nl
HOSTNAMES=mail.kayorama.nl
POSTMASTER=admin

# TLS/SSL Configuration
# Options: letsencrypt, mail, mail-letsencrypt, cert
TLS_FLAVOR=letsencrypt

# Database (sqlite is fine for small setups)
DB_FLAVOR=sqlite

# Authentication
AUTH_RATELIMIT_IP=60/hour
AUTH_RATELIMIT_USER=30/hour
DISABLE_STATISTICS=true

# Web settings
WEB_ADMIN=true
WEB_WEBMAIL=true
WEBMAIL=/webmail
SITENAME=Kayorama Mail

# Subnet configuration (must not conflict with existing networks)
SUBNET=192.168.200.0/24
SUBNET6=

# Mail settings
MESSAGE_SIZE_LIMIT=50000000
MESSAGE_RATELIMIT=200/day
RELAYNETS=
RELAYHOST=

# Fetchmail for external accounts
FETCHMAIL_ENABLED=true
FETCHMAIL_DELAY=600

# Recipient delimiter for sub-addressing (user+tag@domain.com)
RECIPIENT_DELIMITER=+

# DMARC/DKIM settings
DMARC_RUA=admin@kayorama.nl
DMARC_RUF=admin@kayorama.nl

# Welcome email for new users
WELCOME=true
WELCOME_SUBJECT=Welcome to Kayorama Mail
WELCOME_BODY=Welcome to your new email account. You can access webmail at https://mail.kayorama.nl/webmail

# Logo URL (optional)
# LOGO_URL=https://example.com/logo.png

# Roundcube plugins
ROUNDCUBE_PLUGINS=archive,zipdownload,managesieve,markasjunk,enigma

# Full-text search (requires more resources)
FULL_TEXT_SEARCH=false

# Initial admin account
INITIAL_ADMIN_ACCOUNT=admin
INITIAL_ADMIN_DOMAIN=kayorama.nl
INITIAL_ADMIN_PW=ChangeThisStrongPassword123!

# Secret key - CHANGE THIS!
# Generate with: openssl rand -hex 32
SECRET_KEY=change-this-to-64-char-hex-string-from-openssl-rand-hex-32

# Additional domains (comma-separated, no spaces)
# Example: OTHER_DOMAINS=domain2.com,domain3.com
OTHER_DOMAINS=

# Language
LANGUAGE=en

# Timezone
TZ=Europe/Amsterdam

# Docker organization and prefix (usually don't change)
DOCKER_ORG=mailu
DOCKER_PREFIX=
MAILU_VERSION=2.0
